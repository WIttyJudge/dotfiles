#!/usr/bin/env bash

# If you want to find more cool outputs, go to:
# https://gitlab.com/dwt1/shell-color-scripts

# Source: https://gitlab.com/dwt1/shell-color-scripts/-/blob/master/colorscripts/pacman
esc=""

blackf="${esc}[30m";   redf="${esc}[31m";    greenf="${esc}[32m"
yellowf="${esc}[33m"   bluef="${esc}[34m";   purplef="${esc}[35m"
cyanf="${esc}[36m";    whitef="${esc}[37m"

blackfbrightbright="${esc}[90m";   redfbright="${esc}[91m";    greenfbright="${esc}[92m"
yellowfbright="${esc}[93m"   bluefbright="${esc}[94m";   purplefbright="${esc}[95m"
cyanfbright="${esc}[96m";    whitefbright="${esc}[97m"

blackb="${esc}[40m";   redb="${esc}[41m";    greenb="${esc}[42m"
yellowb="${esc}[43m"   blueb="${esc}[44m";   purpleb="${esc}[45m"
cyanb="${esc}[46m";    whiteb="${esc}[47m"

boldon="${esc}[1m";    boldoff="${esc}[22m"
italicson="${esc}[3m"; italicsoff="${esc}[23m"
ulon="${esc}[4m";      uloff="${esc}[24m"
invon="${esc}[7m";     invoff="${esc}[27m"

reset="${esc}[0m"

pacman() {
  f=3 b=4
  for j in f b; do
    for i in {0..7}; do
      printf -v $j$i %b "\e[${!j}${i}m"
    done
  done
  for i in {0..7}; do
      printf -v fbright$i %b "\e[9${i}m"
  done
  bld=$'\e[1m'
  rst=$'\e[0m'
  inv=$'\e[7m'

cat << EOF
$rst
 $f3  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„                $f1  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„    $f2  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„    $f4  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„    $f5  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„    $f6  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„    
 $f3â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€â–€               $f1â–„$f7â–ˆâ–€â–ˆ$f1â–ˆâ–ˆ$f7â–ˆâ–€â–ˆ$f1â–ˆâ–ˆâ–„  $f2â–„â–ˆ$f7â–ˆâ–ˆâ–ˆ$f2â–ˆâ–ˆ$f7â–ˆâ–ˆâ–ˆ$f2â–ˆâ–„  $f4â–„â–ˆ$f7â–ˆâ–ˆâ–ˆ$f4â–ˆâ–ˆ$f7â–ˆâ–ˆâ–ˆ$f4â–ˆâ–„  $f5â–„â–ˆ$f7â–ˆâ–ˆâ–ˆ$f5â–ˆâ–ˆ$f7â–ˆâ–ˆâ–ˆ$f5â–ˆâ–„  $f6â–„â–ˆâ–ˆ$f7â–ˆâ–€â–ˆ$f6â–ˆâ–ˆ$f7â–ˆâ–€â–ˆ$f6â–„
 $f3â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€      $f7â–„â–„  â–„â–„  â–„â–„   $f1â–ˆ$f7â–„â–„â–ˆ$f1â–ˆâ–ˆ$f7â–„â–„â–ˆ$f1â–ˆâ–ˆâ–ˆ  $f2â–ˆâ–ˆ$f7â–ˆ â–ˆ$f2â–ˆâ–ˆ$f7â–ˆ â–ˆ$f2â–ˆâ–ˆ  $f4â–ˆâ–ˆ$f7â–ˆ â–ˆ$f4â–ˆâ–ˆ$f7â–ˆ â–ˆ$f4â–ˆâ–ˆ  $f5â–ˆâ–ˆ$f7â–ˆ â–ˆ$f5â–ˆâ–ˆ$f7â–ˆ â–ˆ$f5â–ˆâ–ˆ  $f6â–ˆâ–ˆâ–ˆ$f7â–ˆâ–„â–„$f6â–ˆâ–ˆ$f7â–ˆâ–„â–„$f6â–ˆ
 $f3â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„      $f7â–€â–€  â–€â–€  â–€â–€   $f1â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  $f2â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  $f4â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  $f5â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  $f6â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  
 $f3â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„â–„               $f1â–ˆâ–ˆâ–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–ˆâ–ˆ  $f2â–ˆâ–ˆâ–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–ˆâ–ˆ  $f4â–ˆâ–ˆâ–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–ˆâ–ˆ  $f5â–ˆâ–ˆâ–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–ˆâ–ˆ  $f6â–ˆâ–ˆâ–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–ˆâ–ˆ
 $f3  â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€                $f1â–€   â–€  â–€   â–€  $f2â–€   â–€  â–€   â–€  $f4â–€   â–€  â–€   â–€  $f5â–€   â–€  â–€   â–€  $f6â–€   â–€  â–€   â–€ 
$bld
 $fbright3  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„                $fbright1  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„    $fbright2  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„    $fbright4  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„    $fbright5  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„    $fbright6  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„    
 $fbright3â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€â–€               $fbright1â–„$fbright7â–ˆâ–€â–ˆ$fbright1â–ˆâ–ˆ$fbright7â–ˆâ–€â–ˆ$fbright1â–ˆâ–ˆâ–„  $fbright2â–„â–ˆ$fbright7â–ˆ â–ˆ$fbright2â–ˆâ–ˆ$fbright7â–ˆ â–ˆ$fbright2â–ˆâ–„  $fbright4â–„â–ˆ$fbright7â–ˆ â–ˆ$fbright4â–ˆâ–ˆ$fbright7â–ˆ â–ˆ$fbright4â–ˆâ–„  $fbright5â–„â–ˆ$fbright7â–ˆ â–ˆ$fbright5â–ˆâ–ˆ$fbright7â–ˆ â–ˆ$fbright5â–ˆâ–„  $fbright6â–„â–ˆâ–ˆ$fbright7â–ˆâ–€â–ˆ$fbright6â–ˆâ–ˆ$fbright7â–ˆâ–€â–ˆ$fbright6â–„
 $fbright3â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€      $fbright7â–„â–„  â–„â–„  â–„â–„   $fbright1â–ˆ$fbright7â–„â–„â–ˆ$fbright1â–ˆâ–ˆ$fbright7â–„â–„â–ˆ$fbright1â–ˆâ–ˆâ–ˆ  $fbright2â–ˆâ–ˆ$fbright7â–ˆâ–ˆâ–ˆ$fbright2â–ˆâ–ˆ$fbright7â–ˆâ–ˆâ–ˆ$fbright2â–ˆâ–ˆ  $fbright4â–ˆâ–ˆ$fbright7â–ˆâ–ˆâ–ˆ$fbright4â–ˆâ–ˆ$fbright7â–ˆâ–ˆâ–ˆ$fbright4â–ˆâ–ˆ  $fbright5â–ˆâ–ˆ$fbright7â–ˆâ–ˆâ–ˆ$fbright5â–ˆâ–ˆ$fbright7â–ˆâ–ˆâ–ˆ$fbright5â–ˆâ–ˆ  $fbright6â–ˆâ–ˆâ–ˆ$fbright7â–ˆâ–„â–„$fbright6â–ˆâ–ˆ$fbright7â–ˆâ–„â–„$fbright6â–ˆ
 $fbright3â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„      $fbright7â–€â–€  â–€â–€  â–€â–€   $fbright1â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  $fbright2â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  $fbright4â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  $fbright5â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  $fbright6â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  
 $fbright3â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„â–„               $fbright1â–ˆâ–ˆâ–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–ˆâ–ˆ  $fbright2â–ˆâ–ˆâ–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–ˆâ–ˆ  $fbright4â–ˆâ–ˆâ–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–ˆâ–ˆ  $fbright5â–ˆâ–ˆâ–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–ˆâ–ˆ  $fbright6â–ˆâ–ˆâ–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–ˆâ–ˆ
 $fbright3  â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€                $fbright1â–€   â–€  â–€   â–€  $fbright2â–€   â–€  â–€   â–€  $fbright4â–€   â–€  â–€   â–€  $fbright5â–€   â–€  â–€   â–€  $fbright6â–€   â–€  â–€   â–€ 
$rst
EOF
}

# Source: https://gitlab.com/dwt1/shell-color-scripts/-/blob/master/colorscripts/monster
monster() {
cat << EOF
              ${reset}${blackf}|               |               |               |               |${reset}
   ${redf}â–ˆ     â–ˆ${reset}    ${blackf}|${reset}    ${greenf}â–ˆ     â–ˆ${reset}    ${blackf}|${reset}    ${yellowf}â–ˆ     â–ˆ${reset}    ${blackf}|${reset}    ${bluef}â–ˆ     â–ˆ${reset}    ${blackf}|${reset}    ${purplef}â–ˆ     â–ˆ${reset}    ${blackf}|${reset}    ${cyanf}â–ˆ     â–ˆ${reset}
   ${redf}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}    ${blackf}|${reset}    ${greenf}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}    ${blackf}|${reset}    ${yellowf}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}    ${blackf}|${reset}    ${bluef}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}    ${blackf}|${reset}    ${purplef}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}    ${blackf}|${reset}    ${cyanf}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}
 ${redf}â–ˆâ–ˆâ–ˆ${boldon}${redfbright}â–ˆâ–ˆ${reset}${redf}â–ˆ${boldon}${redfbright}â–ˆâ–ˆ${reset}${redf}â–ˆâ–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${greenf}â–ˆâ–ˆâ–ˆ${boldon}${greenfbright}â–ˆâ–ˆ${reset}${greenf}â–ˆ${boldon}${greenfbright}â–ˆâ–ˆ${reset}${greenf}â–ˆâ–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${yellowf}â–ˆâ–ˆâ–ˆ${boldon}${yellowfbright}â–ˆâ–ˆ${reset}${yellowf}â–ˆ${boldon}${yellowfbright}â–ˆâ–ˆ${reset}${yellowf}â–ˆâ–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${bluef}â–ˆâ–ˆâ–ˆ${boldon}${bluefbright}â–ˆâ–ˆ${reset}${bluef}â–ˆ${boldon}${bluefbright}â–ˆâ–ˆ${reset}${bluef}â–ˆâ–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${purplef}â–ˆâ–ˆâ–ˆ${boldon}${purplefbright}â–ˆâ–ˆ${reset}${purplef}â–ˆ${boldon}${purplefbright}â–ˆâ–ˆ${reset}${purplef}â–ˆâ–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${cyanf}â–ˆâ–ˆâ–ˆ${boldon}${cyanfbright}â–ˆâ–ˆ${reset}${cyanf}â–ˆ${boldon}${cyanfbright}â–ˆâ–ˆ${reset}${cyanf}â–ˆâ–ˆâ–ˆ${reset}
  ${redf}â–ˆâ–ˆâ–ˆâ–ˆ${boldon}${redfbright}â–ˆ${reset}${redf}â–ˆâ–ˆâ–ˆâ–ˆ${reset}   ${blackf}|${reset}   ${greenf}â–ˆâ–ˆâ–ˆâ–ˆ${boldon}${greenfbright}â–ˆ${reset}${greenf}â–ˆâ–ˆâ–ˆâ–ˆ${reset}   ${blackf}|${reset}   ${yellowf}â–ˆâ–ˆâ–ˆâ–ˆ${boldon}${yellowfbright}â–ˆ${reset}${yellowf}â–ˆâ–ˆâ–ˆâ–ˆ${reset}   ${blackf}|${reset}   ${bluef}â–ˆâ–ˆâ–ˆâ–ˆ${boldon}${bluefbright}â–ˆ${reset}${bluef}â–ˆâ–ˆâ–ˆâ–ˆ${reset}   ${blackf}|${reset}   ${purplef}â–ˆâ–ˆâ–ˆâ–ˆ${boldon}${purplefbright}â–ˆ${reset}${purplef}â–ˆâ–ˆâ–ˆâ–ˆ${reset}   ${blackf}|${reset}   ${cyanf}â–ˆâ–ˆâ–ˆâ–ˆ${boldon}${cyanfbright}â–ˆ${reset}${cyanf}â–ˆâ–ˆâ–ˆâ–ˆ${reset}
  ${redf}â–ˆ â–ˆ ${boldon}${redfbright}â–ˆ${reset} ${redf}â–ˆ â–ˆ${reset}   ${blackf}|${reset}   ${greenf}â–ˆ â–ˆ ${boldon}${greenfbright}â–ˆ${reset} ${greenf}â–ˆ â–ˆ${reset}   ${blackf}|${reset}   ${yellowf}â–ˆ â–ˆ ${boldon}${yellowfbright}â–ˆ${reset} ${yellowf}â–ˆ â–ˆ${reset}   ${blackf}|${reset}   ${bluef}â–ˆ â–ˆ ${boldon}${bluefbright}â–ˆ${reset} ${bluef}â–ˆ â–ˆ${reset}   ${blackf}|${reset}   ${purplef}â–ˆ â–ˆ ${boldon}${purplefbright}â–ˆ${reset} ${purplef}â–ˆ â–ˆ${reset}   ${blackf}|${reset}   ${cyanf}â–ˆ â–ˆ ${boldon}${cyanfbright}â–ˆ${reset} ${cyanf}â–ˆ â–ˆ${reset}
    ${redf}â–ˆ   â–ˆ${reset}     ${blackf}|${reset}     ${greenf}â–ˆ   â–ˆ${reset}     ${blackf}|${reset}     ${yellowf}â–ˆ   â–ˆ${reset}     ${blackf}|${reset}     ${bluef}â–ˆ   â–ˆ${reset}     ${blackf}|${reset}     ${purplef}â–ˆ   â–ˆ${reset}     ${blackf}|${reset}     ${cyanf}â–ˆ   â–ˆ${reset}
              ${blackf}|               |               |               |               |${reset}
EOF
}

# Source: https://gitlab.com/dwt1/shell-color-scripts/-/blob/master/colorscripts/crunch
crunch() {

cat << EOF

 ${reset}${redf}  â–ˆâ–ˆ  â–ˆâ–ˆ   ${reset}${greenf}   â–ˆâ–ˆ  â–ˆâ–ˆ   ${reset}${yellowf}   â–ˆâ–ˆ  â–ˆâ–ˆ   ${reset}${bluef}   â–ˆâ–ˆ  â–ˆâ–ˆ   ${reset}${purplef}   â–ˆâ–ˆ  â–ˆâ–ˆ   ${reset}${cyanf}   â–ˆâ–ˆ  â–ˆâ–ˆ   ${reset}
 ${reset}${redf}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ ${reset}${greenf} â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ ${reset}${yellowf} â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ ${reset}${bluef} â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ ${reset}${purplef} â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ ${reset} ${cyanf}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ ${reset}
 ${reset}${redf}  â–ˆâ–ˆ${boldon}${redfbright}â–ˆâ–ˆ${boldoff}${redf}â–ˆâ–ˆ   ${reset}${greenf}   â–ˆâ–ˆ${boldon}${greenfbright}â–ˆâ–ˆ${boldoff}${greenf}â–ˆâ–ˆ   ${reset}${yellowf}   â–ˆâ–ˆ${boldon}${yellowfbright}â–ˆâ–ˆ${boldoff}${yellowf}â–ˆâ–ˆ   ${reset}${bluef}   â–ˆâ–ˆ${boldon}${bluefbright}â–ˆâ–ˆ${boldoff}${bluef}â–ˆâ–ˆ ${reset}${purplef}     â–ˆâ–ˆ${boldon}${purplefbright}â–ˆâ–ˆ${boldoff}${purplef}â–ˆâ–ˆ   ${reset}${cyanf}   â–ˆâ–ˆ${boldon}${cyanfbright}â–ˆâ–ˆ${boldoff}${cyanf}â–ˆâ–ˆ   ${reset}
 ${reset}${redf}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ ${reset}${greenf} â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ ${reset}${yellowf} â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ ${bluef} â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ ${purplef} â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ ${reset}${cyanf} â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}
 ${reset}${redf}  â–ˆâ–ˆ  â–ˆâ–ˆ   ${reset}${greenf}   â–ˆâ–ˆ  â–ˆâ–ˆ   ${reset}${yellowf}   â–ˆâ–ˆ  â–ˆâ–ˆ   ${reset}${bluef}   â–ˆâ–ˆ  â–ˆâ–ˆ   ${reset}${purplef}   â–ˆâ–ˆ  â–ˆâ–ˆ   ${reset}${cyanf}   â–ˆâ–ˆ  â–ˆâ–ˆ   ${reset}
 ${reset}
EOF

}

help() {
  echo "Available scripts: pacman, monster, crunch.
Execution: colorscript exec pacman"
  exit 2
}

[ "$1" != 'exec' ] && help

declare -F "$2" > /dev/null && $2 || help

